<style>
    .video-wrapper {
        position: relative;
        width: 100%;
        height: 800px;
        overflow: hidden;
    }

    .video-wrapper video {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }

    .video-overlay {
        position: absolute;
        inset: 0;
        background: rgba(0, 0, 0, 0.800);
        z-index: 1;
    }

    .hero-content {
        position: absolute;
        z-index: 2;
        color: white;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
    }

    .video-navbar-wrapper {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        z-index: 3;
    }
</style>

<div class="video-wrapper">

    <!-- âœ… Navbar Over Video -->
    <div class="video-navbar-wrapper">
        {% render 'video-navbar' %}
    </div>

    <video autoplay muted loop playsinline>
        <source src="{{ 'leather_crafting_header_video.mp4' | asset_url }}" type="video/mp4">
    </video>

    <div class="video-overlay"></div>

    <div class="hero-content">
        <h1>Flairy</h1>
    </div>
</div>